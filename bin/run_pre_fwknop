#!/usr/bin/env bash
#
# run_pre_fwknop
echo "invoked $*" >> ~/.zkit/var/run_pre_fwknop.log

opts=$(getopt p $*)
if [ $? != 0 ]; then
    echo >&2 "Usage: $0 [-p] stanza host port
  -p            Use password auth
"
    exit 2
fi

use_pass=0
set -- $opts
for opt; do
    case $opt in
	--) shift ; break;;
	-p) use_pass=1 ;;
    esac
    shift
done

FWKNOP_OPTS=
if [[ $use_pass == 0 && -n "$GPG_AGENT_INFO" ]]; then
    FWKNOP_OPTS=--gpg-agent
fi

case $(uname -s) in
    Linux)
	WAIT="usleep $((400*1000))"
	;;
    Darwin)
	WAIT="sleep 0.4"
	;;
    *)
	WAIT="sleep 1"
	;;
esac
ncat=$(type -p ncat)
if [[ -z $ncat ]]; then
    ncat=$(type -p nc)
    if [[ -z $ncat ]]; then
	echo "Cannot find ncat nor nc" >&2
	exit 1
    fi
else
    ncat="$ncat -w 30"
fi
echo "execute: fwknop -n $1 ${FWKNOP_OPTS} && ${WAIT} && exec $ncat $2 $3" >> ~/.zkit/var/run_pre_fwknop.log
LANG=C fwknop -n $1 ${FWKNOP_OPTS} && ${WAIT} && exec $ncat $2 $3
