#!/usr/bin/env bash
#
# run_pre_fwknop
opts=$(getopt p $*)
if [ $? != 0 ]; then
    echo >&2 "Usage: $0 [-p] stanza host port
  -p            Use password auth
"
    exit 2
fi

use_pass=0
set -- $opts
for opt; do
    case $opt in
	--) shift ; break;;
	-p) use_pass=1 ;;
    esac
    shift
done

FWKNOP_OPTS=
if [[ $use_pass == 0 && -n "$GPG_AGENT_INFO" ]]; then
    FWKNOP_OPTS=--gpg-agent
fi

case $(uname -s) in
    Linux)
	WAIT="usleep $((400*1000))"
	;;
    Darwin)
	WAIT="sleep 0.4"
	;;
    *)
	echo "Unknown system type: $(uname -s)"
	exit 1
	;;
esac
LANG=C fwknop -n $1 ${FWKNOP_OPTS} && ${WAIT} && exec ncat $2 $3
